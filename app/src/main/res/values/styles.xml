<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderTextStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">Roboto-Medium</item>
        <item name="android:textColor">@color/colorBlack87</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OtherTextStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorBlack54</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
